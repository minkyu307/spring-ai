<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<profiles version="21">
    <profile kind="CodeFormatterProfile" name="VerticalStyle" version="21">
        <!-- 1. 기본 들여쓰기 설정 (Space 4칸). continuation_indentation 1 = 줄 연속 시 추가 4칸(기본 2단위=8칸 방지) -->
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="1"/>

        <!-- 2. 줄 길이 (이보다 길면 줄바꿈 시도) -->
        <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>

        <!-- 3. [핵심] 메서드 선언 파라미터 정렬 -->
        <!-- value="52"의 의미: 
             - 모든 파라미터를 줄바꿈 (Wrap all elements)
             - 함수 이름에 맞추지 않고 기본 들여쓰기 사용 (Indent by one) 
             - 강제 줄바꿈 (Force split) -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_parameters_in_method_declaration" value="52"/>

        <!-- 4. [핵심] 괄호 위치 설정 (이게 있어야 괄호가 위아래로 찢어집니다) -->
        <!-- 줄바꿈이 발생했을 때, 여는 괄호 뒤와 닫는 괄호 앞을 줄바꿈 처리 -->
        <setting id="org.eclipse.jdt.core.formatter.parentheses_positions_in_method_declaration" value="separate_lines_if_wrapped"/>

        <!-- (선택) 메서드 '호출' 할 때도 똑같이 하고 싶다면 아래 두 줄 주석 해제 -->
        <!-- <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="52"/> -->
        <!-- <setting id="org.eclipse.jdt.core.formatter.parentheses_positions_in_method_invocation" value="separate_lines_if_wrapped"/> -->

        <!-- 기타 보조 설정 -->
        <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_at_end_of_file_if_missing" value="insert"/>
    </profile>
</profiles>